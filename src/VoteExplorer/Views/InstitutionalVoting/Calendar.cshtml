<script>
    /* CALENDAR */

    function meetingsSuccessFunc(data, status) {

        for (var x=0;x<data.length;x++)
        {
            data[x].title = data[x].entity;
            data[x].start = data[x].meetingDate;
        }

        if (typeof ($.fn.fullCalendar) === 'undefined') { return; }
        console.log('init_calendar');

        var date = new Date(),
            d = date.getDate(),
            m = date.getMonth(),
            y = date.getFullYear(),
            started,
            categoryClass;

        var calendar = $('#calendar').fullCalendar({
            header: {
                left: 'prev,next today',
                center: 'title',
                right: 'month,agendaWeek,agendaDay,listMonth'
            },
            selectable: true,
            selectHelper: true,
            select: function (start, end, allDay) {
                $('#fc_create').click();

                started = start;
                ended = end;

                $(".antosubmit").on("click", function () {
                    var title = $("#title").val();
                    if (end) {
                        ended = end;
                    }

                    categoryClass = $("#event_type").val();

                    if (title) {
                        calendar.fullCalendar('renderEvent', {
                            title: title,
                            start: started,
                            end: end,
                            allDay: allDay
                        },
						  true // make the event "stick"
						);
                    }

                    $('#title').val('');

                    calendar.fullCalendar('unselect');

                    $('.antoclose').click();

                    return false;
                });
            },
            eventClick: function (calEvent, jsEvent, view) {
                var calendarEvent = new Date(calEvent.start);
                var eventDate = (calendarEvent.getMonth() + 1) + "-" + calendarEvent.getDate() + "-" + calendarEvent.getFullYear() + " " + calendarEvent.getHours() + ":" + calendarEvent.getMinutes();
                var serviceURL = '/api/_GetMeetingByEntityAndDate/' + calEvent.title + '/' + eventDate;

                $.ajax({
                    type: "GET",
                    url: serviceURL,
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: meetingDetailsSuccessFunc,
                    error: errorFunc
                });
            },
            editable: true,
            events: data
        });

    };

    function meetingDetailsSuccessFunc(data, status) {        

        var myWindow = $("#window");
        myWindow.data("kendoWindow").title("Event Details");
        myWindow.data("kendoWindow").center().open();

        $("#winDate").html("<p><strong>Date/Time: </strong></p><p>" + data.meetingDate + "</p>");
        $("#winDescription").html("<p><strong>Description: </strong></p><p>" + data.entity + "</p>");

        };


    $(document).ready(function () {
        var serviceURL = '/api/_GetMeetings';

        $.ajax({
            type: "GET",
            url: serviceURL,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: meetingsSuccessFunc,
            error: errorFunc
        });

        var myWindow = $("#window"),
            undo = $("#undo");
        undo.fadeIn();
        undo.click(function () {
            myWindow.data("kendoWindow").center().open();
            undo.fadeOut();
        });

        function onClose() {
            undo.fadeIn();
        }

        myWindow.kendoWindow({
            width: "300px",
            title: "About Alvar Aalto",
            visible: false,
            actions: [
                "Pin",
                "Minimize",
                "Maximize",
                "Close"
            ],
            close: onClose
        });

    });
    
    function errorFunc() {
        alert('error');
    }


</script>
